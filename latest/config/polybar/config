label-line-color = ${colors.inactive}

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = AnonymicePowerline Nerd Font:fontformat=truetype:size=10;1
font-1 = AnonymicePowerline Nerd Font:fontformat=truetype:size=22;1
font-2 = FontAwesome:style=Regular:pixelsize=7


modules-left = left-start-hide i3 xwindow left-stop
modules-center = vpn left-start date right-start vpn-recenter
modules-right =  right-stop cpu right-stop-active eth right-start-active filesystem right-start-hide

tray-position = right 
tray-padding = 1
tray-background = ${colors.background}
tray-offset-x = -530
tray-detached = true


[module/decor-glyph]
